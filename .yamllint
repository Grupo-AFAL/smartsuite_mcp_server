---
# Relaxed yamllint configuration for SmartSuite MCP Server
# Focus on syntax errors, not style preferences

extends: default

rules:
  # Disable document start requirement (---)
  document-start: disable

  # Allow longer lines (GitHub Actions often need them)
  line-length:
    max: 120
    level: warning

  # Relax comment spacing (allow single space before comment)
  comments:
    min-spaces-from-content: 1

  # Allow common truthy values (on/off, yes/no, true/false)
  truthy:
    allowed-values: ['true', 'false', 'on', 'off', 'yes', 'no']

  # Relax bracket spacing (allow spaces inside brackets)
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1

  # Relax braces spacing
  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1
